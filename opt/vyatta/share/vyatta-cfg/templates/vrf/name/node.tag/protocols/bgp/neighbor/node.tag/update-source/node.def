type: txt
help: Source IP of routing updates
val_help: ipv4; IPv4 address of route source
val_help: ipv6; IPv6 address of route source
val_help: txt; Interface as route source
allowed: sh -c "${vyos_completion_dir}/list_local_ips.sh --both" && echo " " && sh -c "${vyos_completion_dir}/list_interfaces"
syntax:expression: exec "${vyos_libexec_dir}/validate-value --regex \'(bond|br|dum|en|ersp|eth|gnv|ifb|lan|l2tp|l2tpeth|macsec|peth|ppp|pppoe|pptp|sstp|tun|veth|vti|vtun|vxlan|wg|wlan|wwan)[0-9]+(.\\d+)?|lo\' --exec \"${vyos_validators_dir}/ipv4-address \" --exec \"${vyos_validators_dir}/ipv6-address \" --exec \"${vyos_validators_dir}/file-path --lookup-path /sys/class/net --directory \"  --value \'$VAR(@)\'"; "Invalid value"
